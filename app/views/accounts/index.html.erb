<div id="content">
  <div class="container">
    <div class="row container-gallery">
      <div class="col col-md-12">
        <div class="post-container">
          <div class="post-desc">
            <h2>Find Your Favorite designers and portfolios in xRinch.</h2>
          </div>
          <div style="overflow-x:auto;">
            <table>
              <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>email</th>
                <th>Profile Page</th>
                <th>Blog Page</th>
                <th>Portfolio Page</th>
              </tr>
              <% @accounts.each do |account| %>
              <tr>
                <td><%= account.first_name %></td>
                <td><%= account.last_name %></td>
                <td><%= account.user.email %></td>
                <td><%= link_to 'Profile', account_path(account) %></td>
                <td><%= link_to 'Blog', "" %></td>
                <td><%= link_to 'Portfolio', "" %></td>
              </tr>
              <% end %>
            </table>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>