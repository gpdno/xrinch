<!-- begin:content -->
    <div id="content">
      <div class="container">
        <div class="row">
          <%= render 'shared/profile_bar' %>
          <!-- break -->
          <div class="col-md-9 col-sm-8 col-xs-12">
            <div class="post-container">
              <div class="post-content">
                <div class="row">
                  <div class="col-md-12">
                    <div class="heading-title">
                    <div class="row">
                      <div class="col-md-9 col-md-offset-1">
                        <h3 class="form-title">Update your profile</h3>
                        <%= form_for(@account) do |f| %>
                          <%#= render 'shared/error_messages' %>
                          <div class="form-group">
                          <label class="col-sm-2 control-label">First Name</label>
                            <div class="col-sm-10 form-custom">
                              <%= f.text_field :first_name, class: 'form-control', placeholder: 'First Name' %>
                            </div>
                          </div>
                          <div class="form-group">
                          <label class="col-sm-2 control-label">Last Name</label>
                            <div class="col-sm-10 form-custom">
                              <%= f.text_field :last_name, class: 'form-control', placeholder: 'Last Name'  %>
                            </div>
                          </div>
                          <div class="form-group">
                          <label class="col-sm-2 control-label">Description</label>
                            <div class="col-sm-10 form-custom">
                              <%= f.text_area :description, class: 'form-control', placeholder: 'Something about you...' , size: "25x10" %>
                            </div>
                          </div>
                          <div class="form-group">
                          <label class="col-sm-2 control-label">Location</label>
                            <div class="col-sm-10 form-custom">
                              <%= f.text_field :location, class: 'form-control', placeholder: 'Location (i.e. State)'  %>
                            </div>
                          </div>
                           <div class="form-group">
                          <label class="col-sm-2 control-label">Website http://</label>
                            <div class="col-sm-10 form-custom">
                               <%= f.text_field :website, class: 'form-control', placeholder: 'www.example.com'  %>
                            </div>
                          </div>
                          <div id="">
                            <%= f.submit "Save changes", class: "btn btn-primary" %>
                            <%= link_to 'Cancel', account_path(current_user), class: "btn btn-warning" %>
                          </div>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>