<div id="content">
  <div class="container">
    <div class="row">
              <div class="panel panel-info">
            <div class="panel-body">
      <div class="col-md-9 col-sm-8 col-xs-12">
        <div class="heading-title">
            <h2>New Portfolio Item</h2>
        </div>
        <div class="form-group">
          
          <%= simple_form_for(@portfolio) do |f| %>
          <div class="form-group">
            <label class="col-sm-2 control-label">Portfolio Title</label>
            <div class="col-sm-10 form-custom">
              <%= f.input_field :name, class: 'form-control', placeholder: 'Title of Portfolio' %>
            </div>
          </div>
          
          <div class="form-group">
            <label class="col-sm-2 control-label">Portfolio Description</label>
            <div class="col-sm-10 form-custom">
              <%#= f.input :category, collection: ["Mechanical", "Electrical", "Optical"] %>
              <%= f.text_field :description, class: 'form-control', placeholder: 'What the portfolio is about...' , size: "25x10" %>
            </div>
          </div>
          
          <div>
            <div class="col-sm-10">
            <%= f.button :submit, class: 'btn btn-primary' %>
            <%= link_to 'Cancel', blogs_path, class: 'btn btn-warning' %>
            </div></div>
          </div>
          
          <% end %>
                </div>
      </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- end:content --