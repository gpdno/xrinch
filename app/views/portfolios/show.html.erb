          <!-- begin:article -->
          <div class="col-md-9 col-md-pull-3 col-sm-8 col-sm-pull-4 col-xs-12">
            <!-- begin:article-content -->
            <div class="row">
              <div class="col-md-12">
                <div class="post-container">
                  <div class="post-content">
                    <div class="row">
                      <div class="col-md-12">
                        <div class="detail-meta">
                          <span><em>in</em> <%= @portfolio.name %></span>
                          <span><em>by</em> <%= @portfolio.user.account.first_name %></span>
                          <span><em><%= @portfolio.created_at.strftime("%d %b. %Y") %></span>
                          <span><a href="#">3 comments</a></span>
                        </div>
                        <div class="detail-heading-title">
                          <img src="https://s3.amazonaws.com/rinch/images/sample1.png" size: "500x400"><%#) if @image.picture? %>
                          <% @images.each do |image| %>
                            <h2><%= image.name %></h2>
                            <img src="https://s3.amazonaws.com/rinch/images/man1.jpg" alt="Gregory DeNinno img">
                            <img src="https://s3.amazonaws.com/rinch/images/sample1.png" size: "500x400"><%#) if @image.picture? %>
                            <br>
                          <% end %>
                        </div>
                        <div class="detail-meta">
                          <span><em>Tags : </em> <a href="#">Drawing</a>, <a href="#">CAD</a>, <a href="#">Assembly</a></span>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <!-- end:article-content -->

            <!-- begin:description -->
            <div class="row">
              <div class="col-md-12">
                <div class="post-container">
                  <div class="post-content">
                    <div class="heading-title">
                      <h3>Description</h3>
                    </div>

                    <p><%= @portfolio.description %></p>
                  </div>
                </div>
              </div>
            </div>
            <!-- end:description -->

            <!-- begin:comments -->
