    <!-- begin:content -->
    <div id="content">
      <div class="container">
        <div class="row">
          <!-- begin:sidebar -->
          <div class="col-md-3 col-md-push-9 col-sm-4 col-sm-push-8 col-xs-12">
            
            <%= render 'details' %>
            
            <%= render 'recent' %>
            
            <%= render 'tags' %>

          </div>
