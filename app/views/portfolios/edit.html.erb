<div id="content">
  <div class="container">
    <div class="row">
        <div class="heading-title">
            <h2>Edit Portfolio</h2><hr>
        </div>
        <div class="row">
            <div class="col-md-9">

          
          <%= simple_form_for(@portfolio) do |f| %>
          <div class="form-group">
            <label class="col-sm-2 control-label">Portfolio Title</label>
            <div class="col-sm-10 form-custom">
              <%= f.input_field :name, class: 'form-control', placeholder: 'Title of Portfolio' %>
            </div>
          </div>
          
          <div class="form-group">
            <div class="col-sm-10 form-custom">
              <%= f.input :category, collection: ["Mechanical", "Electrical", "Optical"] %>
              </div>
          </div>
          
          <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2 form-custom">
              <%= f.text_area :description, class: 'form-control', placeholder: 'What the portfolio is about...' , size: "25x10" %>
            </div>
          </div>
          
          <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2 form-custom">
              <%= f.text_field :keyword, class: 'form-control', placeholder: 'keywords' , size: "25x10" %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2 form-custom">
              <%= f.button :submit %>  <%= link_to 'Cancel', "", class: 'btn btn-warning' %>
            </div>
          </div>
          
          <% end %>
        

      </div>
        <!-- begin:sidebar -->
        <div class="col-md-3">
            <button type="button" class="btn btn-primary btn-block">
                <i class="fa fa-pencil" aria-hidden="true"></i>  Details</button>
            <%= link_to '<i class="fa fa-picture-o" aria-hidden="true"></i> Images'.html_safe, 
            images_path, class: "btn btn-default btn-block" %>
                
        </div>
        <!-- end:sidebar -->
        </div>

    </div>
  </div>
</div>
<!-- end:content --