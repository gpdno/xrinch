<!DOCTYPE html>
<html>
<head>
  <title>xRinch</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link href='https://fonts.googleapis.com/css?family=Roboto+Condensed:400,300italic,700,300,400italic' rel='stylesheet' type='text/css'>
  <%= csrf_meta_tags %>
</head>
<body>
    <%= render 'shared/navigation' %>
        <div id="content">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <p class="notice"><%= notice %></p>
                        <p class="alert"><%= alert %></p>
                    </div>
                </div>
            </div>
        </div>
<%= yield %>
    <%= render 'shared/footer' %>
</body>
</html>
