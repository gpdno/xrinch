<div class="form-group">

    <%= form_for(@blog) do |f| %>
        <div class="form-group">
            <label class="col-sm-2 control-label">Post Title</label>
            <div class="col-sm-10 form-custom">
                <%= f.text_field :title, class: 'form-control', placeholder: 'Title of post' %>
            </div>
        </div>
        
        <div class="form-group">
            <label class="col-sm-2 control-label">Description</label>
            <div class="col-sm-10 form-custom">
                <%= f.text_area :description, class: 'form-control', placeholder: 'What the post is about...' , size: "25x10" %>
            </div>
        </div>
        
        <div>
            <%= f.button :submit, class: 'btn btn-primary' %>
            <%= link_to 'Cancel', blogs_path, class: 'btn btn-warning' %>  
        </div>
    <% end %>
    
</div>