<div id="content">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-sm-6 col-xs-10 col-md-offset-4 col-sm-offset-3 col-xs-offset-1">
        <div class="post-container">
          <div class="post-content">
            <div class="form-signin">
              <div class="heading-title">
                  <h2>New blog post</h2>

                <% @blogs.each do |blog| %>
                    <h3><%= blog.title %></h3>
                    <%= link_to 'View Post', blog_path(blog) %>
                <% end %>
                    <hr>
                <%= link_to 'New Blog Post', new_blog_path %>

             </div>
            </div>  
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
